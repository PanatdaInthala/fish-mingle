@using FishMingle.Models;
@{
  Layout = "_Layout";
}
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
<img class="fishlovers" src="~/img/fishlovers.png">
  <a class="navbar-brand">Fish Mingle</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/fish/@Model["sessionId"]/browse">Browse</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/fish/@Model["sessionId"]/match">Matches</a>
      </li>
      <li class="nav-item">
        <a class="nav-link"  href="/fish/@Model["sessionId"]/logout">Logout</a>
      </li>
    </ul>
    <span class="navbar-text">
    </span>
  </div>
</nav>
<div class="container">
  <br>
@if(Model!=null)
{

<h1 id="profile">Profile: @Model["newFish"].GetFirstName()</h1>

<img id="profilePic" src="~/img/profilepic.png">
<span id="profile-info">
<h3><strong>Species:</strong> @Model["newFish"].GetFishSpecies().GetSpeciesName()</h3>
  <br>
  <h3><strong>Bio:</strong></h3>
  <h4>@Model["newFish"].GetBio()</h4>
<br>
<br>
<br>
<br>

<h3 class="preferred"><strong>Preferred species:</strong> </h3>
  @foreach (var species in Model["speciesList"])
  {
    <li class="preferred">@species.GetSpeciesName()</li>
  }
  </span>
  <br>



}


<br>
      <center><button class="button-color"> <a href="/fish/@Model["sessionId"]/update/password">Update Your Password</a></button>
      <button class="button-color"> <a href="/fish/@Model["sessionId"]/update/username">Update Your Name</a></button>
      <button class="button-color"><a href="/fish/@Model["sessionId"]/confirmation/delete">Delete My Account</a> </button></center>
<hr>
<footer id="footer">FishMingle.com Â©2018<img id="social_media" src="~/img/social_media.png"></footer>
</div>
