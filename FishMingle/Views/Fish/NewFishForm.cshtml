@using FishMingle.Models;
@{
  Layout = "_Layout";
}
<title>Home Layout</title>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
<img class="fishlovers" src="~/img/fishlovers.png">
  <a class="navbar-brand" href="/">Fish Mingle</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <a class="nav-link" href="/fish/login">Login</a>
      </li>
    </ul>
    <span class="navbar-text">
    </span>
  </div>
</nav>
  <div class="container">
  <h1>Create Your Very Own Fish!</h1>
  <h4>Add a stylist to the site!</h4>
    <form action="/fish/create" method="post">
      <label for="userName">Enter your full name</label>
      <input type="text" name="userName">
      <hr>
      <label for="userPassword">Create Password</label>
      <input type="text" name="userPassword">
      <hr>
      <label for="userNameProfile">Enter your profile name</label>
      <input type="text" name="userNameProfile">
      <hr>
      <label for="bio">Add a bio!</label><br>
      <textarea rows="3" name="bio"></textarea>
      <hr>
      <h4>Choose Your Species!</h4>
      <select class="speciesId" name="speciesId">
      @if(Model!=null)
        {
          @foreach(var species in Model)
          {
            <h5><option value="@species.GetSpeciesId()">@species.GetSpeciesName()
            </option></h5>
            <hr>
          }
          <hr>
        }
        </select>
        <hr>
        <h4>Select the species you prefer:</h4>
          @foreach (var species in Model)
          {
            <div class="form-check-inline">
            <input class="form-check-input" type="checkbox" value="@species.GetSpeciesId()" name="chosenSpecies">
            <label for="chosenSpecies">@species.GetSpeciesName()</label>
            </div>
          }
        <hr>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>

    <footer id="footer">FishMingle.com Â©2018<img id="social_media" src="~/img/social_media.png"></footer>
</div>
